@using Microsoft.AspNetCore.Identity
@using Projekattt1.Data
@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<ul class="nav nav-pills nav-sidebar flex-column">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fa fa-user" aria-hidden="true"></i>
            <p>
                &emsp;&emsp;@User.Identity.Name
            </p>
        </a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-white"><i class="fa fa-sign-out" aria-hidden="true"></i>&emsp;&emsp; Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register"><i class="fa fa-registered" aria-hidden="true"></i>&emsp;&emsp; Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-in" aria-hidden="true"></i> &emsp;&emsp; Login</a>
    </li>
}
</ul>
